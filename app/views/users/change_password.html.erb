
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title =>  "Cambio de Contraseña" } do %> 
      
  <div role="main" class="ui-content">  
 

        <%= render "/common/form_errors" %>
      
        <%= form_for @user, url: {:action => 'change_password_submit'}, method: :post do |f| %>
         <% if @user.errors.any? %>
          <div id="error_explanation" class="form_errors">
            <h2> <%= t :error_header %> </h2>
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
          <% end %>
          
          
          <table class="tabla_campos" cellpadding=0 cellspacing=0>
           
          <tr>
           <th><%= f.label :name %></th>
          <td><%= @user.name %></td>
          </tr>
            
          <tr>
            <th><%= f.label :email %></th>
            <td><%= @user.email %></td>
          </tr>
          
          <tr>
            <th><%= f.label :current_password %></th>
            <td><%= f.password_field :current_password %></td>
          </tr>
          
          <tr>
            <th><%= f.label :new_password %></th>
            <td><%= f.password_field :password %></td>
          </tr>
          
           <tr>
            <th><%= f.label :password_confirmation %></th>
            <td><%= f.password_field :password_confirmation %></td>
          </tr>
          
          <tr><td colspan=2 class="acciones_form">
          <%= f.submit t(:accept) %>
          </td>
          </tr>
          </table>
         
        <% end %>

   <div class="links_form"><%= link_to 'Salir',  users_path %></div>  

  </div> <!-- /content -->  
  
<% end %>

