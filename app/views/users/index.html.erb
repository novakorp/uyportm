
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Listado de Usuarios" } do %> 

  <div role="main" class="ui-content">    


 <%= link_to 'Nuevo Usuario', new_user_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
  <table class="tabla_listado" cellpadding=0 cellspacing=0>
    <tr class="tabla_listado_fila_cabezal">
     <th>Nombre</th>
      <th>E-mail</th>
	  <th></th>
    </tr>
   
    <% @users.each do |user| %> 
        <%  item_url =  user_path(user) 
            item_id=mobile_item_id(item_url) %>  
		    <tr id="<%= item_id %>" class="tabla_listado_fila_contenido">  
       <td><%= user.name %></td>
        <td><%= user.email %></td>  
	    <td><%= link_to image_tag(asset_path ('buttons/view.gif')), user %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_user_path(user) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')"  %>  </td> 
       </tr>
    <% end %>
  </table>
 
  <div class="links_listado"><%= link_to 'Salir', "/welcome/configuration" %></div>
 
  </div><!-- /content --> 
  
<% end %>

