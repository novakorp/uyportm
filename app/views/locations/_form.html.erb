
<%= form_for @location do |f| %>
 <% if @location.errors.any? %>
  <div id="error_explanation" class="form_errors">
  <h2> <%= t :error_header %> </h2>
    <ul>
    <% @location.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>  
  <th><%= f.label :name %></th>
  <td> <%= f.text_field :name %> </td>
  </tr>
  
  <tr>
    <th><%= f.label :state_id %></th>
    <td> <%= f.collection_select :state_id, State.all,  :id, :name  %> </td>
  </tr>
  
   <tr>
    <th><%= f.label :location_type %></th>
    <td> <%= f.select :location_type , [['Ciudad', 1], ['Lugar', 2]] %> </td>
  </tr>
    
   <tr>
    <th><%= f.label :longitude %></th>
    <td> <%= f.text_field :longitude , :value => (number_with_precision(f.object.longitude, precision: 5, separator: '.')) %> </td>
  </tr>
  
   <tr>
    <th><%= f.label :latitude %></th>
    <td> <%= f.text_field :latitude , :value => (number_with_precision(f.object.latitude, precision: 5, separator: '.')) %> </td>
  </tr>
  
  
  <tr><td colspan=2 class="acciones_form">
  
	<%= f.submit t(:save) %>

  </td>
  </tr>
  </table>
 
<% end %>


