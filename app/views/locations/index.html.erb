
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Ubicaciones" } do %> 

  <div role="main" class="ui-content">    

	<%= link_to 'Nueva UbicaciÃ³n', new_location_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
	<table class="tabla_listado" cellpadding=0 cellspacing=0>
	  <tr class="tabla_listado_fila_cabezal">
	    <th>Nombre</th>
		 <th>Departamento</th>  
	     <th>Longitud</th> 
	     <th>Latitud</th> 
		<th>Tipo</th> 
		<th></th>
	  </tr>
	 
	  <% @locations.each do |location| %>
		<%  item_url = location_path(location)
		    item_id=mobile_item_id(item_url) %>
	      
		<tr id="<%= item_id %>" class="tabla_listado_fila_contenido">
	     <td><%= location.name %></td>
	      <td><%=location.state.name%></td>
	      <td><%= location.longitude %></td> 
	       <td><%= location.latitude %></td> 
		  <td><% if location.location_type == 1 %>Ciudad<% else %>Lugar<% end %></td> 
	   <td><%= link_to image_tag(asset_path ('buttons/view.gif')), location %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_location_path(location) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')"  %></td>
	     </tr>
	  <% end %>
	</table>
	<div class="links_listado"><%= link_to 'Volver', "/welcome/configuration" %></div>


  </div> <!-- /content --> 
  
<% end %>

	 
