  
<%= form_for ([@m_requested_cargo, @m_requested_supply])  do |f| %>
 <% if @m_requested_supply.errors.any? %>
  <div id="error_explanation" class="form_errors">
  <h2> <%= t :error_header %> </h2>
     <ul>
    <% @m_requested_supply.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>   
  <th><%= f.label :amount %></th>
	<td> <%=  f.text_field :amount %> </td>
  </tr>
    <tr> 
  <th><%= f.label :address_id %></th>
	<td> <%=  f.collection_select :address_id, @m_requested_supply.m_requested_cargo.m_shipping_request.customer.addresses,  :id, :description %> </td>
  </tr>
   <th><%= f.label :comments %></th>  
	<td> <%=  f.text_field :comments %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">

  <%= f.submit t(:save) %>

  </td>
  </tr>
  </table>  
<% end %>


