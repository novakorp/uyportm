
<% @top_menu_selection="Viajes" %>
<%= render '/common/top_menu' %>

<h1>Viajes</h1>

<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
    <th>Fecha</th>	
    <th>Tipo de Pedido</th>
    <th>Vehículo<br>Acoplado</th>
    <th>Chofer</th> 
	<th>Empresa</th>
	<th>Q</th>
	<th>Unidad</th> 
	<th>Precio Unit</th> 
	<th>Documentos</th>  
	<th>Retorno</th> 
	<th>Observaciones</th>
	<th>Factura</th>  
	<th></th>
  </tr>
 
  <% @shippings.each do |shipping| %>
    <tr class="tabla_listado_fila_contenido">
      <td>  <%=l shipping.shipping_date, format: :short %></td>
	  <td> <%= shipping.m_shipping_request.name %></td>
	  <td> <%= shipping.vehicle.plate_number %> 
	  	<% if shipping.coupled_vehicle %>
	  	<br>  <%= shipping.coupled_vehicle.plate_number %>  
	  	<% end %>
	  </td>
      <td> <%= shipping.driver.first_name + " " + shipping.driver.last_name %> </td>      
     <td><%= shipping.company.company_name %> </td>     
	  <td><%= shipping.amount %> </td>
	  <td><%= shipping.billing_unit.description %> </td>  
	  <td><%= shipping.unit_price %> </td>
	  <td><%= shipping.documents %> </td>
	  <td><%= shipping.return_typede.description %> </td>   
	  <td><%= shipping.comments %> </td>
	  <td><%= shipping.invoice_number %> </td>  
	  
	  
	  <td> <%=  %> </td> 
	  
	  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), shipping %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_simple_shipping_path(shipping) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), simple_shipping_path(shipping), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
     </tr>
  <% end %>
</table>
<div class="links_listado"><%= link_to 'Volver al Menú Principal', "welcome/index" %></div>
 


