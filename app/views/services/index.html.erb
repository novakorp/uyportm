
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Listado de Servicios" } do %> 

  <div role="main" class="ui-content">    

     <%= link_to 'Nuevo Servicio', new_service_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
    <table class="tabla_listado" cellpadding=0 cellspacing=0>
      <tr class="tabla_listado_fila_cabezal">
        <th>Empresa</th>
	    <th>Descripción</th>
        <th>Unidad de Facturación</th> 
	    <th></th>
      </tr>
     
      <% @services.each do |service| %>
        <%  item_url = service_path(service)
            item_id=mobile_item_id(item_url) %>
       
		    <tr id="<%= item_id %>" class="tabla_listado_fila_contenido"> 
	      <td><%= service.company.company_name %></td>
          <td><%= service.description %></td>
          <td><%= service.billing_unit.description %></td>  
	      <td><%= link_to image_tag(asset_path ('buttons/view.gif')), service %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_service_path(service) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')" %></td>
        </tr>
      <% end %>
    </table>
    <div class="links_listado"><%= link_to 'Salir', "/welcome/configuration" %></div> 


  </div><!-- /content --> 
  
<% end %>


