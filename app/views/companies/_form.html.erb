  
<%= form_for @company do |f| %>
 <% if @company.errors.any? %>
  <div id="error_explanation" class="form_errors">
    <h2> <%= t :error_header %> </h2>
    <ul>
    <% @company.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th><%= f.label :company_name %></th>
  <td> <%= f.text_field :company_name%> </td>
  </tr>
  <tr>
  <th><%= f.label :trade_name %></th>
  <td> <%= f.text_field :trade_name%> </td>
  </tr>
  <tr>
  <th><%= f.label :rut %></th>
  <td> <%= f.text_field :rut%> </td>
  </tr>
  <tr>
  <tr>
  <th><%= f.label :mtop %></th>
  <td> <%= f.text_field :mtop%> </td>
  </tr>    
  <th><%= f.label :bps %></th>
  <td> <%= f.text_field :bps %> </td>
  </tr>
  <tr>
  <th><%= f.label :mtss %></th>
  <td> <%= f.text_field :mtss%> </td>
  </tr>    
  <tr><td colspan=2 class="acciones_form">
  <%= f.submit t(:save) %>
  </td>
  </tr>
  </table>  
<% end %>


