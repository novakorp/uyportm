


<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Categorías de Carga" } do %> 

  <div role="main" class="ui-content">    

     <%= link_to 'Nueva Categoría', new_cargo_category_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
    <table class="tabla_listado" cellpadding=0 cellspacing=0>
      <tr class="tabla_listado_fila_cabezal">
        <th>Descripción</th> 
    	<th></th>
      </tr>
     
      <% @cargo_categories.each do |cargo_category| %> 
        <%  item_url = cargo_category_path(cargo_category) 
            item_id=mobile_item_id(item_url) %>
      
        <tr id="<%= item_id %>" class="tabla_listado_fila_contenido">
          <td><%= cargo_category.description %></td> 
    	   <td><%= link_to image_tag(asset_path ('buttons/view.gif')), cargo_category %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_cargo_category_path(cargo_category) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')"  %></td>
    	
        </tr>
      <% end %>
    </table>

  </div><!-- /content -->
  
  
<% end %>
