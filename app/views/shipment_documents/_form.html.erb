  
<%= form_for @shipment_document do |f| %>
 <% if @shipment_document.errors.any? %>
 <div id="error_explanation" class="form_errors">
  <h2> <%= t :error_header %> </h2>
     <ul>
    <% @shipment_document.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>  
  <tr>
   <th><%= f.label :document_type_id %></th>
  <td> <%= f.collection_select :document_type_id, DocumentType.all,  :id, :description %>  </td>
  </tr>
  
  <tr>
  <th><%= f.label :number_text %></th>
  <td> <%= f.text_field :number_text %>  </td>
  </tr>
  
  <tr>
  <th><%= f.label :comments %></th>
  <td> <%= f.text_area :comments %>  </td>
  </tr>
   
  <tr><td colspan=2 class="acciones_form">
  <%= f.submit t(:save) %>
  </td>
  </tr>
  </table>
  
<% end %>


