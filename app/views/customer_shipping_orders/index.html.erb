
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Notas de Pedido" } do %>
                 
    
  <div role="main" class="ui-content">    
    
     <%= link_to 'Nueva Nota de Pedido', new_customer_shipping_order_path %>
    
    <table class="tabla_listado" cellpadding=0 cellspacing=0>
      <tr class="tabla_listado_fila_cabezal">
        <th>Nro</th>
        <th>Cliente</th>    
        <th>Fecha Orden</th>
        <th>Fecha Trabajo</th>
      <th></th>
      </tr>
      
      <% @customer_shipping_orders.each do |customer_shipping_order| %>
        <%  item_url = customer_shipping_order_path(customer_shipping_order)
            item_id=mobile_item_id(item_url) %>
        
        <tr id='<%=item_id%>' class"tabla_listado_fila_contenido">
          <td><%= customer_shipping_order.order_number %></td>
          <td><%= customer_shipping_order.customer.name %></td>
          <td><%= l customer_shipping_order.order_datetime %></td>
          <td><%= l customer_shipping_order.shipping_date %></td>
          <td><%= link_to image_tag(asset_path ('buttons/view.gif')), customer_shipping_order, 'data-ajax': 'false' %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_customer_shipping_order_path(customer_shipping_order) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "' , '" +  item_id + "')"  %></td>
        </tr>
      <% end %>
      
    </table>
    
    <div class="links_listado"><%= link_to 'Volver al MenÃº Principal', "welcome/index" %></div>
 
  </div><!-- /content -->
  
  
<% end %>

 
 