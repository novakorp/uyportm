
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Listado de Cuentas" } do %>
   
  <div role="main" class="ui-content">   

 <%= link_to 'Nueva Cuenta', new_account_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
    <th>Nro Cuenta</th>
    <th>Cliente</th> 
	<th>Descripcion</th> 	
	<th></th>
  </tr>
 
  <% @accounts.each do |account| %>

	<%  item_url = account_path(account)
            item_id=mobile_item_id(item_url) %>

     <tr id="<%= item_id %>" class="tabla_listado_fila_contenido">
      <td><%= account.account_number %></td>
      <td><%= account.customer.name %></td>	  
      <td><%= account.description %></td>
	  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), account %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_account_path(account) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')"  %></td>
   </tr>
  <% end %>
</table>


<div class="links_listado"><%= link_to 'Volver', "/welcome/configuration" %></div>


  </div><!-- /content --> 
  
<% end %>



