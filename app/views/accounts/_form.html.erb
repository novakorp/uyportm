  
<%= form_for @account do |f| %>
 <% if @account.errors.any? %>
  <div id="error_explanation" class="form_errors">
  <h2> <%= t :error_header %> </h2>
    <ul>
    <% @account.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  
  <tr>
  <th><%= f.label :account_number %></th>
  <td> <%= f.text_field :account_number%> </td>
  </tr>
    
  <tr>
    <th><%= f.label :customer_id %></th>
    <td> <%= f.collection_select :customer_id, Customer.all, :id, :name %> </td>
  </tr>
  
  <tr>
  <th><%= f.label :description %></th>
  <td> <%= f.text_field :description %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
	<%= f.submit t(:save) %>
  </td>
  </tr>
  </table>  
<% end %>


