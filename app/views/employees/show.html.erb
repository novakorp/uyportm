

<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Empleado" } do %>
   
  <div role="main" class="ui-content">  


	<table class="tabla_campos_lectura" cellpadding=0 cellspacing=0>
	  <tr>
	  <th>Empresa:</th>
	  <td><%= @employee.company.company_name %> </td>
	  </tr>
	  <tr>
	  <th>Nombre:</th>
	  <td><%= @employee.first_name %> <%= @employee.last_name %> </td>
	  </tr>
	  <tr>
	  <th>Documento:</th>
	  <td> <%= @employee.personal_id %> ( <%= @employee.personal_id_type %> )</td>
	 </tr>
	  <tr>
	  <th>Cargo:</th>
	  <td> <%= get_job_type_description (@employee.job_type) %></td>
	 </tr>
	</table>

  	 <div class="links_form"><%= link_to 'Salir', employees_path, {"data-ajax"=>"false"}%></div> 
 

  </div> <!-- /content --> 
<% end %>


  
