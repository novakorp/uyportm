
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Empleados" } do %> 

  <div role="main" class="ui-content">  

	 <%= link_to 'Nuevo Empleado', new_employee_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
	 
	 <table class="tabla_listado" cellpadding=0 cellspacing=0>
	  <tr class="tabla_listado_fila_cabezal">
	    <th>Empresa</th>
		<th>Nombre</th>
	    <th>Apellido</th> 
		<th>Documento</th>	
		<th>Cargo</th>
		<th></th>
	  </tr>
	 
	  <% @employees.each do |employee| %>

		<%  item_url = employee_path(employee)
		    item_id=mobile_item_id(item_url) %>
	      
		<tr id="<%= item_id %>" class="tabla_listado_fila_contenido">

	      <td><%= employee.company.company_name %></td>
	      <td><%= employee.first_name %></td>
	      <td><%= employee.last_name %></td>  
	      <td><%= employee.personal_id %></td>
		  <td> <%= get_job_type_description (employee.job_type) %></td>
		  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), employee %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_employee_path(employee) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')"  %></td>
	    </tr> 
	  <% end %>
	</table>

	<div class="links_listado"><%= link_to 'Volver', "/welcome/configuration" %></div>

  </div> <!-- /content --> 
  
<% end %>




