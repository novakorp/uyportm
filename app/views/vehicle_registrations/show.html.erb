
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Registro MTOP" } do %>
   
  <div role="main" class="ui-content">   

    <% @vehic = @vehicle_registration.vehicle %> 


    <table class="tabla_campos_lectura" cellpadding=0 cellspacing=0>
     <% if @vehic %>
      <tr>
      <th>Empresa</th> 
	    <td> <%= @vehic.company.company_name %> </td>
      </tr>
      <tr>
        <th>Marca:</th>
        <td>  <%= 
            if @vehic.vehicle_brand != nil
                @vehic.vehicle_brand.name
            end  %>
        </td>
       </tr>
       <tr>
        <th>Modelo:</th>
        <td> <%= @vehic.model %></td>
       </tr>
       <tr>
        <th>Matrícula:</th>
        <td> <%= @vehic.plate_number %></td>
       </tr>
       <% end %>
       
      <tr>
      <th>Chasis:</th>
      <td> <%= @vehicle_registration.chassis %> </td>
      </tr>  
      
      <tr>
      <th>Motor:</th>
      <td> <%= @vehicle_registration.engine %></td>
      </tr>   
          
      
      <tr>
      <th>Fecha Empadronamiento:</th>
      <td>   <%= if @vehicle_registration.registration_date
              l @vehicle_registration.registration_date.to_date 
              end %> 
      </td> 
      </tr>  
      
      <tr>
      <th>Padrón:</th>
      <td> <%= @vehicle_registration.registration_number %></td>
      </tr>   
      
      <tr>
      <th>Identificación DNT:</th>
      <td> <%= @vehicle_registration.dnt_id %></td>
      </tr>   
      
      
      <tr>
      <th>Fecha de Ingreso:</th>
      <td> <%= if @vehicle_registration.date_of_entry 
              l @vehicle_registration.date_of_entry.to_date 
          end %> 
       </td>
      </tr>   
      
	
      <tr>
      <th> </th>
      <td> <div class="links_form"> <%= link_to 'Modificar', edit_vehicle_registration_path(@vehicle_registration) %> </div> </td>
      </tr>   
         
    </table>

    <div class="links_form"><%= link_to 'Salir',  @vehic, {"data-ajax"=>"false"}%></div> 

  </div> <!-- /content --> 
<% end %>
 

