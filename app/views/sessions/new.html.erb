<% provide(:title, "Sign in") %>

<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Identificación Requerida" } do %> 
  <div role="main" class="ui-content">     
           
     <%= render "/common/form_errors" %>
      
     <%= form_for(:session, url: sessions_path) do |f| %> 
         <table class="tabla_campos" cellpadding=0 cellspacing=0>
             <tr>
                 <th>E-mail:</th>
                 <td>   <%= f.text_field :email %> </td>
             </tr>    
             <tr>
                 <th> Contraseña: </th>
                 <td>  <%= f.password_field :password %> </td>
             </tr>
             <tr>
                 <td colspan=2 class="acciones_form">
                    <%= f.submit "Ingresar" %>
                 </td>
             </tr>
         </table>          
    <% end %>  
  </div>
 
<% end %>
  