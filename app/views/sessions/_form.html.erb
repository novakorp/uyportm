  
<%= form_for @billing_unit do |b| %>
 <% if @billing_unit.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@billing_unit.errors.count, "error") %> impiden guardar el formulario:</h2>
    <ul>
    <% @billing_unit.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th>Descripción:</th>
  <td>  <%= b.text_field :description %> </td>
  </tr>
    
  <tr>
    <th> Código: </th>
    <td> <%= b.text_field :code %> </td>
  </tr>
  <tr><td colspan=2 class="acciones_form">
  <%= b.submit "Guardar" %>
  </td>
  </tr>
  </table>
  
<% end %>


