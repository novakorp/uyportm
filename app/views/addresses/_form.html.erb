

<%= form_for ([@customer, @address])  do |f| %>
 <% if @address.errors.any? %>
 <div id="error_explanation" class="form_errors">
  <h2> <%= t :error_header %> </h2>
    <ul>
    <% @address.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>   
  <th><%= f.label :description %></th> 
	<td> <%=  f.text_field :description %> </td>
  </tr>
    <tr> 
  <th><%= f.label :address_detail_1 %></th>
	<td> <%=  f.text_field :address_detail_1 %> </td>
  </tr>
  <tr> 
  <th><%= f.label :address_detail_2 %></th>  
	<td> <%=  f.text_field :address_detail_2 %> </td>
  </tr>
  <tr> 
  <th><%= f.label :phone_number_1 %></th>
	<td> <%=  f.text_field :phone_number_1 %> </td>
  </tr>
  <tr>   
   <tr> 
  <th><%= f.label :phone_number_2 %></th> 
	<td> <%=  f.text_field :phone_number_2 %> </td>
  </tr>
  <tr>   
  <tr> 
  <th><%= f.label :postal_code %></th>  
	<td> <%=  f.text_field :postal_code %> </td>
  </tr>
  
  <tr> 
  <th><%= f.label :location_id %></th>  
	<td> <%= f.collection_select :location_id, Location.all,  :id, :name %> </td>
  </tr>
   <tr> 
  <th><%= f.label :comments %></th>  
	<td> <%=  f.text_area :comments %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= f.submit t(:save) %>
  </tr>
  </table> 

<% end %> 
