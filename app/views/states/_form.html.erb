  
<%= form_for @state do |f| %>
 <% if @state.errors.any? %>
	<div id="error_explanation" class="form_errors">
	  <h2> <%= t :error_header %> </h2>
    <ul>
    <% @state.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th><%= f.label :name %></th>
  <td> <%= f.text_field :name %> </td>
  </tr>
    
  <tr>
    <th><%= f.label :country %></th>
    <td> <%=  f.text_field  :country  %> </td>
  </tr>
  
  <tr><td colspan=2 class="acciones_form">
  <%= f.submit t(:save) %>
  </td>
  </tr>
  </table>  
<% end %>


