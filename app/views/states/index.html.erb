
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "﻿Listado de Departamentos" } do %> 

  <div role="main" class="ui-content">    


 <%= link_to 'Nuevo Departamento', new_state_path %> &nbsp;&nbsp; <%= link_to 'Volver', "/welcome/configuration" %>
<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
    <th>Nombre</th>
    <th>País</th>  
	<th></th>
  </tr>
 
  <% @states.each do |state| %>
    <%  item_url =  state_path(state) 
            item_id=mobile_item_id(item_url) %>
	      
		    <tr id="<%= item_id %>" class="tabla_listado_fila_contenido"> 
      <td><%= state.name %></td>
      <td><%= state.country %></td>
 	  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), state %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_state_path(state) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')" %></td>
    </tr>
  <% end %>
</table>


	<div class="links_listado"><%= link_to 'Salir',   "/welcome/configuration" %></div>


  </div><!-- /content --> 
  
<% end %> 
