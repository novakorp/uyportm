<h1>Listado de Tipos de Vehículos</h1>

 <%= link_to 'Nuevo Tipo de Vehículo', new_vehicle_type_path %>
<table class="tabla_listado" cellpadding=0 cellspacing=0>
  <tr class="tabla_listado_fila_cabezal">
    <th>Descripción</th>	
	<th>Acoplable</th>
    <th>Se acopla a</th>
	<th></th>
  </tr>
 
  <% @vehicle_types.each do |vehicle_type| %>
	<td><%= vehicle_type.description %></td>
  
	  <% if vehicle_type.coupling_support == 1 %>
	  <td>Sí</td>	  
	  <td><%= vehicle_type.couples_to_type.description %> </td>
	  <% else %>
	  <td>No</td>
	  <td></td>
	   <% end %>    
	  <td><%= link_to 'Ver', vehicle_type %> &nbsp; <%= link_to 'Editar', edit_vehicle_type_path(vehicle_type) %> &nbsp; <%= link_to 'Eliminar', vehicle_type_path(vehicle_type), method: :delete, data: { confirm: '¿Está seguro?' } %></td>
    </tr>
  <% end %>
</table>
<div class="links_listado"><%= link_to 'Volver al Menú Principal', "welcome/index" %></div>
 


