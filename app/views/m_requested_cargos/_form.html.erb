  
<%= form_for ([@m_shipping_request, @m_requested_cargo])  do |f| %>
 <% if @m_requested_cargo.errors.any? %>
   <div id="error_explanation" class="form_errors">
  <h2> <%= t :error_header %> </h2>
    <ul>
    <% @m_requested_cargo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
   <tr>
     <th><%= f.label :cargo_type_id %></th>   
   <td > <%=  f.collection_select :cargo_type_id, CargoType.all,  :id, :description %> </td>
   </tr>
 
  <tr>   
    <th><%= f.label :amount %></th>   
	<td> <%=  f.text_field :amount %>  <%=  f.collection_select :measure_unit_id, MeasureUnit.all,  :id, :symbol %> </td>
  </tr>
  
  
  <tr><td colspan=2 class="acciones_form">

  <%= f.submit t(:save) %>

  </td>
  </tr>
  </table>  
<% end %>


