
<%=render :layout => 'common/mobile',
          :locals => { :page_id => mobile_page_id() , :page_title => "Dispositivos GPS" } do %> 

  <div role="main" class="ui-content">  

	<%= link_to 'Volver', "/gps/" %>
	
	<H2> Activos </H2>
	<table class="tabla_listado" cellpadding=0 cellspacing=0>
	  <tr class="tabla_listado_fila_cabezal">
       <th>Id Objeto</th>
	   <th>Ident Numerico GPS</th>
	    <th>Ident Descriptivo GPS</th>
	    <th>Matricula GPS</th> 
		<th>ID Vehiculo</th>
		<th></th>
	  </tr>
	 
	  <% @gps_installations.each do |gps_installation| %>
		<%  item_url = gps_installation_path(gps_installation)
		    item_id=mobile_item_id(item_url) %>
	      
		<tr id="<%= item_id %>" class="tabla_listado_fila_contenido">

          <td><%= gps_installation.id %></td>
		  <td><%= gps_installation.gps_numeric_ident %></td>
	      <td><%= gps_installation.gps_descriptive_ident %></td>
	      <td><%= gps_installation.gps_plate_number %></td>      
	      <td><%= gps_installation.vehicle_id %></td>    
		  <td><%= link_to image_tag(asset_path ('buttons/view.gif')), gps_installation %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_gps_installation_path(gps_installation) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')"  %></td>
	    </tr>
	  <% end %>
	</table>
	
	
    <H2> Retirados </H2>
 
    <table class="tabla_listado" cellpadding=0 cellspacing=0>
      <tr class="tabla_listado_fila_cabezal">
          
        <th>Id Interno</th>
        <th>Fecha Retirado</th>
        <th>Motivo</th>
        <th>Ident Numerico GPS</th>
        <th>Ident Descriptivo GPS</th>
        <th>Matricula GPS</th> 
        <th>ID Vehiculo</th>
        <th></th>
      </tr>
            
      <% @gps_installations_inactive.each do |gps_installation_ina| %>
        <%  item_url = gps_installation_path(gps_installation_ina)
            item_id=mobile_item_id(item_url) %>
          
        <tr id="<%= item_id %>" class="tabla_listado_fila_contenido">

          <td><%= gps_installation_ina.id %></td> 
          <td><%= gps_installation_ina.retirement_date %></td> 
          <td><%= gps_installation_ina.retirement_reason %></td>
          <td><%= gps_installation_ina.gps_numeric_ident %></td>
          <td><%= gps_installation_ina.gps_descriptive_ident %></td>
          <td><%= gps_installation_ina.gps_plate_number %></td>      
          <td><%= gps_installation_ina.vehicle_id %></td>    
          <td><%= link_to image_tag(asset_path ('buttons/view.gif')), gps_installation_ina %> &nbsp; <%= link_to image_tag(asset_path ('buttons/edit.gif')), edit_gps_installation_path(gps_installation_ina) %> &nbsp; <%= link_to image_tag(asset_path('buttons/delete.gif')), "javascript:list_delete_resource_dialog('" + item_url + "', '" + item_id + "')"  %></td>
        </tr>
      <% end %>

      
    </table>


    <div class="links_listado"><%= link_to 'Volver', "/gps" %></div>



  </div> <!-- /content --> 
  
<% end %>


