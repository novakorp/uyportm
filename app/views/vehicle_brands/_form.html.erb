  
<%= form_for @vehicle_brand do |f| %>
 <% if @vehicle_brand.errors.any? %>
  <div id="error_explanation" class="form_errors">
    <h2> <%= t :error_header %> </h2>
    <ul>
    <% @vehicle_brand.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <table class="tabla_campos" cellpadding=0 cellspacing=0>
  <tr>
  <th><%= f.label :name %></th>
  <td>  <%= f.text_field :name %> </td>
  </tr>
    
  <tr>
    <th><%= f.label :abbreviation %></th>
    <td> <%= f.text_field :abbreviation %> </td>
  </tr>
  
  <tr>
    <th><%= f.label :country_of_origin %></th>
    <td> <%= f.text_field :country_of_origin %> </td>
  </tr>
  <tr><td colspan=2 class="acciones_form">
  <%= f.submit t(:save) %>
  </td>
  </tr>
  </table>
  
<% end %>


